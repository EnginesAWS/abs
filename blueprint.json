{
	"identifier": "abs",
	"about": {
		"title": "Managed Functions ABS",
		"explanation": "Define the container service for Managed Functions ABS"
	},
	"compute_service": {
		"default": {
			"identifier": "container_service"
		}
	},
	"resources": {
		"cpus": 10,
		"memory": 256
	},
	"ports": [
		{
			"container_port": 443,
			"host_port": 443
		}
	],	
	"binding_target": {
		"configuration": {
			"cluster": "aws_ecs_cluster.container_service_cluster.id",
			"desired_count": 3,
			"iam_role": "aws_iam_role.iam.arn",
			"depends_on": "[aws_iam_role_policy.iam]",
			"essential": true
 		}
	}
}
